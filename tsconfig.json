{
  "compilerOptions": {
    /* Configurações básicas */
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "Node16",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,

    /* Configurações de paths */
    "baseUrl": "./src",
    "paths": {
      "@database/*": ["database/*"],
      "@api/*": ["api/*"],
      "@controllers/*": ["api/v1/controllers/*"],
      "@services/*": ["api/v1/services/*"],
      "@routes/*": ["api/v1/routes/*"],
      "@middlewares/*": ["api/v1/middlewares/*"],
      "@utils/*": ["api/v1/utils/*"],
    },

    /* Configurações de output */
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "declaration": true,

    /* Module Resolution */
    "moduleResolution": "Node16"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}